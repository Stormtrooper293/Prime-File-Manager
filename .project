// settings.gradle.kts (Project Root)

// Configures repositories for Gradle plugins and dependencies.
pluginManagement {
    repositories {
        google()
        mavenCentral()
        gradlePluginPortal()
    }
}

dependencyResolutionManagement {
    repositoriesMode.set(RepositoriesMode.FAIL_ON_PROJECT_REPOS)
    repositories {
        google()
        mavenCentral()
    }
}

// This sets the project name, replacing the <name> tag from the Eclipse file.
rootProject.name = "Prime File Manager"

// This includes the main application module in the project.
include(":app")
